<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/stroke"
    tools:context=".Entering_bonus_task">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="269dp"
        android:layout_height="47dp"
        android:background="@drawable/danil_loh"
        app:layout_constraintBottom_toBottomOf="@+id/Name_task"
        app:layout_constraintEnd_toEndOf="@+id/Name_task"
        app:layout_constraintStart_toStartOf="@+id/Name_task"
        app:layout_constraintTop_toTopOf="@+id/Name_task" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="286dp"
        android:layout_height="141dp"
        android:background="@drawable/danil_loh"
        app:layout_constraintBottom_toBottomOf="@+id/Task_conditions"
        app:layout_constraintEnd_toEndOf="@+id/Task_conditions"
        app:layout_constraintStart_toStartOf="@+id/Task_conditions"
        app:layout_constraintTop_toTopOf="@+id/Task_conditions" />

    <Button
        android:id="@+id/upload_task"
        android:layout_width="246dp"
        android:layout_height="38dp"
        android:background="@drawable/circle"
        android:text="UPLOAD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <EditText
        android:id="@+id/Name_task"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:gravity="center_horizontal|center_vertical"
        android:hint="NameTask"
        android:textColor="#000000"
        android:textColorHint="#939393"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024" />

    <EditText
        android:id="@+id/Task_conditions"
        android:layout_width="286dp"
        android:layout_height="141dp"
        android:gravity="start|top"
        android:hint="Task Conditionds"
        android:textColor="#050505"
        android:textColorHint="#939393"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23000002" />

    <NumberPicker
        android:id="@+id/Pickerhours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.Picker"
        app:layout_constraintBottom_toBottomOf="@+id/pickerminutes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.204"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pickerminutes" />

    <NumberPicker
        android:id="@+id/pickerminutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.Picker"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65" />

    <NumberPicker
        android:id="@+id/Pickerseconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.Picker"
        app:layout_constraintBottom_toBottomOf="@+id/pickerminutes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pickerminutes" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/arimo"
        android:text="Time limit"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:theme="@style/SCBSwitch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Task_conditions" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="156dp"
        android:layout_height="45dp"
        android:background="@drawable/danil_loh"
        app:layout_constraintBottom_toBottomOf="@+id/scores_et"
        app:layout_constraintEnd_toEndOf="@+id/scores_et"
        app:layout_constraintStart_toStartOf="@+id/scores_et"
        app:layout_constraintTop_toTopOf="@+id/scores_et" />

    <EditText
        android:id="@+id/scores_et"
        android:layout_width="156dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:inputType="number"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/arimo"
        android:text="Enter the reward"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pickerminutes" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/image_login"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.25" />

    <ImageButton
        android:id="@+id/ebt_finish"
        android:layout_width="36dp"
        android:layout_height="33dp"
        android:background="@drawable/arrow_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ð¡reating a bonus task"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ebt_finish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ebt_finish" />


</androidx.constraintlayout.widget.ConstraintLayout>